<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="scanner.Views.CartPage"
             Title="Cart"
             BackgroundColor="#F5F5F5">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout"
                     IconImageSource="logout_icon.png"
                     Clicked="OnLogoutClicked"
                     Order="Primary"
                     Priority="0"/>
    </ContentPage.ToolbarItems>

    <StackLayout Padding="20">

        
            <Label Text="Your Cart" 
                   FontSize="26" 
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
      

      
        <ListView x:Name="CartListView"
                  ItemsSource="{Binding CartItems}"
                  HasUnevenRows="True"
                  SeparatorVisibility="None"
                  BackgroundColor="Transparent"
                  Margin="0,20,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Padding="15"
                               Margin="0,10"
                               BackgroundColor="White"
                               CornerRadius="5"
                               HasShadow="True">
                            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                                <StackLayout VerticalOptions="Center" HorizontalOptions="StartAndExpand">
                                    <Label Text="{Binding ProductName}" 
                                           FontSize="18" 
                                           FontAttributes="Bold" 
                                           TextColor="Black"/>
                                    <Label Text="{Binding Quantity, StringFormat='Quantity: {0}'}"
                                           FontSize="16"
                                           TextColor="Gray"/>
                                </StackLayout>

                                <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                                    <Button Text="Remove" 
                                            FontSize="16"
                                            BackgroundColor="#FF4757"
                                            TextColor="White"
                                            WidthRequest="100"
                                            HeightRequest="40"
                                            CornerRadius="3"
                                            Command="{Binding Path=BindingContext.RemoveFromCartCommand, Source={x:Reference CartListView}}"
                                            CommandParameter="{Binding .}"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

      
        <Frame CornerRadius="10"
               HasShadow="True"
               Padding="15"
               BackgroundColor="#6A11CB"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="End"
               Margin="0,20,0,0">
            <Label Text="{Binding CartItems.Count, StringFormat='Total Items: {0}'}"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>
        </Frame>

    </StackLayout>
</ContentPage>